{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2019",
		"module": "es2015",
		"experimentalDecorators": true,
		"lib": ["es2019", "webworker"],
		"esModuleInterop": true,
		"allowJs": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["**/*.spec.ts"]
}
